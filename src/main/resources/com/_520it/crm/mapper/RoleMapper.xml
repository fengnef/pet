<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com._520it.crm.mapper.RoleMapper" >
  <resultMap id="BaseResultMap" type="com._520it.crm.domain.Role" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="sn" property="sn" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from role
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com._520it.crm.domain.Role" useGeneratedKeys="true" keyProperty="id" >
    insert into role (sn, name)
    values (#{sn,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com._520it.crm.domain.Role" >
    update role
    set sn = #{sn,jdbcType=VARCHAR},
      name = #{name,jdbcType=VARCHAR}
    where id = #{id,jdbcType=BIGINT}
  </update>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select id, sn, name
    from role
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAll" resultMap="BaseResultMap" >
    select id, sn, name
    from role
  </select>
  <!-- 处理角色和权限中间表,关联关系 -->
  <insert id="insertRelation">
  	 insert into role_permission(role_id,permission_id) values(#{roleId},#{permissionId})
  </insert>
  
  <!-- 打破关系 -->
  <delete id="deleteRelation">
  	delete from role_permission where role_id = #{roleId}
  </delete>
  
    <sql id="where_sql"></sql>
 
  <!-- 查询总结果数 -->
  <select id="queryPageCount" resultType="long">
  		select count(*) from role r 
  		<include refid="where_sql"/>
  </select>
  
  <!-- 查询结果集 -->
  <select id="queryPageResult" resultMap="BaseResultMap">
  		select * from role 
  		<include refid="where_sql"/>
  		limit #{start},#{rows}
  </select>
  
  <select id="getRolesIdByShopkeeperId" resultType="long">
  	 select role_id from shopkeeper_role where shopkeeper_id = #{shopkeeperId}
  </select>
  
  <select id="getRoleSnByShopkeeperId" resultType="string">
  	SELECT
		r.sn
	FROM role r
	LEFT JOIN shopkeeper_role er ON (er.role_id = r.id)
	WHERE
		er.shopkeeper_id = #{shopkeeperId}
  </select>
  <select id="getRoleByShopkeeperId" resultMap="BaseResultMap">

	SELECT * from role where id in (
	SELECT role_id FROM shopkeeper_role WHERE shopkeeper_id =  #{shopkeeperId}
)
  </select>

</mapper>